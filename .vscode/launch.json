{
  // https://code.visualstudio.com/docs/editor/variables-reference
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Active Js File",
      "runtimeExecutable": "node",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Active Ts File",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "windows": {
        "program": "${workspaceFolder}/node_modules/ts-node/bin/ts-node"
      },
      "args": [
        "-O",
        "{\"module\": \"commonjs\"}",
        "--files",
        "${file}",
        "a",
        "b",
        "--app-type",
        "x"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Active File",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "args": ["${fileBasenameNoExtension}", "--config", "jest.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Release",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "windows": {
        "program": "${workspaceFolder}/node_modules/ts-node/bin/ts-node"
      },
      "args": [
        "-O",
        "{\"module\": \"commonjs\"}",
        "--files",
        "${workspaceFolder}/packages/release/bin/release.js"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Gen",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "windows": {
        "program": "${workspaceFolder}/node_modules/ts-node/bin/ts-node"
      },
      "args": ["-O", "{\"module\": \"commonjs\"}", "--files", "bin/gen.js"],
      "cwd": "${workspaceFolder}/packages/generate",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Create Template",
      "runtimeExecutable": "node",
      "args": [
        "${workspaceFolder}/packages/create-template/bin/create-template",
        "temp",
        "-f"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
