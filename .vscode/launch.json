{
  // https://code.visualstudio.com/docs/editor/variables-reference
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Ts File",
      "runtimeExecutable": "tsx",
      "runtimeArgs": [
        "--tsconfig",
        "${workspaceFolder}/packages/utils/tsconfig.json"
      ],
      "program": "${file}",
      "windows": {
        "program": "${file}"
      },
      "env": {
        "DEBUG": "release:*"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest File",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      },
      "args": ["${fileBasenameNoExtension}", "--config", "jest.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Js File",
      "runtimeExecutable": "node",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Release",
      "runtimeExecutable": "tsx",
      "runtimeArgs": [
        "--tsconfig",
        "${workspaceFolder}/packages/release/tsconfig.json"
      ],
      "program": "${workspaceFolder}/packages/release/src/cli.ts",
      "windows": {
        "program": "${workspaceFolder}/packages/release/src/cli.ts"
      },
      "env": {
        "DEBUG": "release*"
      },
      "args": [
        // "--help",
        // "--version",
        "--cwd=/Users/ender/kwai/technology/polyrepo-release",
        // "--cwd=/Users/ender/kwai/technology/monorepo-release",
        // "--git.independent",
        // "--no-git.requireClean",
        // "--no-git.changelog",
        // "--git.requireBranch=master",
        "--no-npm.requireOwner",
        // "--npm.prerelease",
        // "--npm.prereleaseId=beta",
        "--no-npm.confirm"
        // "prerelease"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Create Template",
      "runtimeExecutable": "tsx",
      "program": "${workspaceFolder}/packages/create-template/src/cli.ts",
      "windows": {
        "program": "${workspaceFolder}/packages/create-template/src/cli.ts"
      },
      "args": ["temp", "-f"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Create Gen",
      "runtimeExecutable": "tsx",
      "program": "${workspaceFolder}/packages/create/src/cli.ts",
      "windows": {
        "program": "${workspaceFolder}/packages/create/src/cli.ts"
      },
      "args": ["${workspaceFolder}/packages/create/bin/gen.js"],
      "cwd": "/Users/ender/learning/github/templates/packages/npm-node",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**"]
    }
  ]
}
