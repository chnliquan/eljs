{
  "name": "eljs",
  "version": "0.8.0-beta.0",
  "private": true,
  "description": "Nodejs utility monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/chnliquan/eljs"
  },
  "license": "MIT",
  "author": "liquan",
  "scripts": {
    "add-owner": "tsx scripts/npm-add-owner",
    "boot": "tsx scripts/bootstrap",
    "build": "turbo run build",
    "coverage": "codecov",
    "dev": "turbo run dev",
    "format": "prettier --write 'packages/**/*.{ts,tsx}'",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint 'packages/**/*.{ts,tsx}'",
    "prepare": "husky install",
    "release": "tsx scripts/release",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --colors --forceExit"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "codecov": "^3.8.3",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-dirs": "^0.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "only-allow": "^1.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.3",
    "prettier-plugin-packagejson": "^2.2.18",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tsx": "^3.8.2",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4",
    "zx": "^4.3.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
