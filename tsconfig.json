{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["esnext"],
    "paths": {
      "@eljs/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/global.d.ts"]
}
